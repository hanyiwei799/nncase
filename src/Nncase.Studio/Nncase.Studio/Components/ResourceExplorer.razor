<Divider Orientation="left">资源管理器</Divider>

<Tree TItem="ResourceNode"
    DataSource="TopNodes"
    ShowIcon
    TitleExpression="x => x.DataItem.Name"
    KeyExpression="x => x.DataItem.Path"
    IsLeafExpression="x => !x.DataItem.IsDirectory"
    ChildrenExpression="x => x.DataItem.Children"
    IconExpression="x => x.DataItem.Icon"
    OnSelect="OnNodeSelected">
	<SwitcherIconTemplate>
		@switcherIcon
	</SwitcherIconTemplate>
</Tree>

@code {
	RenderFragment switcherIcon =@<Icon Type="down" />;
}
